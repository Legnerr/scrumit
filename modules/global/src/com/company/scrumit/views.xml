<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="com.company.scrumit.entity.Contact"
          extends="_local"
          name="contact-view">
        <property name="specialities"
                  view="_minimal"/>
        <property name="city"
                  view="_minimal"/>
        <property name="status"
                  view="_minimal"/>
    </view>
    <view class="com.company.scrumit.entity.Task"
          extends="_local"
          name="tasks-full">
        <property name="performer"
                  view="_minimal"/>
        <property name="task"
                  view="_minimal">
            <property name="level"/>
            <property name="top"
                      view="_minimal"/>
        </property>
        <property name="duration"/>
        <property name="top"
                  view="_minimal"/>
        <property name="sprints"
                  view="_minimal"/>
        <property name="tracker"
                  view="_minimal"/>
        <property name="sprintBacklog"
                  view="_minimal"/>
        <property name="teams"
                  view="_minimal"/>
    </view>
    <view class="com.company.scrumit.entity.Task"
          extends="_minimal"
          name="task-tree">
        <property name="task"
                  view="_minimal"/>
        <property name="proirity"/>
    </view>
    <view class="com.company.scrumit.entity.Team"
          extends="_local"
          name="team-view">
        <property name="leader"
                  view="_minimal"/>
        <property name="projects"
                  view="_minimal"/>
        <property name="members"
                  view="_minimal">
            <property name="email"/>
        </property>
    </view>
    <view class="com.company.scrumit.entity.Sprint"
          extends="_local"
          name="sprint-view">
        <property name="team"
                  view="_minimal"/>
        <property name="tasks"
                  view="_minimal">
            <property name="deadline"/>
            <property name="begin"/>
            <property name="done"/>
            <property name="proirity"/>
            <property name="realduration"/>
            <property name="type"/>
            <property name="description"/>
            <property name="performer"
                      view="_minimal"/>
            <property name="duration"/>
            <property name="amount"/>
            <property name="task"
                      view="_minimal"/>
        </property>
    </view>
    <view class="com.company.scrumit.entity.Performer"
          extends="_minimal"
          name="performer-view">
        <property name="contact"
                  view="_minimal"/>
        <property name="teams"
                  view="_minimal"/>
        <property name="loginLowerCase"/>
        <property name="password"/>
        <property name="name"/>
        <property name="firstName"/>
        <property name="lastName"/>
        <property name="middleName"/>
        <property name="email"/>
        <property name="changePasswordAtNextLogon"/>
        <property name="group"
                  view="_minimal"/>
    </view>
    <view class="com.company.scrumit.entity.Task"
          extends="_minimal"
          name="task-top">
        <property name="top"
                  view="_minimal"/>
    </view>
    <view class="com.company.scrumit.entity.Meeting"
          extends="_local"
          name="meeting-view">
        <property name="sprint"
                  view="_minimal">
            <property name="team"
                      view="_minimal"/>
            <property name="tasks"
                      view="_minimal"/>
        </property>
    </view>
    <view class="com.company.scrumit.entity.MeetingsTask"
          extends="_local"
          name="meetingsTask-full">
        <property name="meeting"
                  view="_minimal"/>
        <property name="task"
                  view="_minimal"/>
    </view>
</views>
