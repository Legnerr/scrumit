<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.scrumit.web.projectrole.ProjectRoleEdit"
        datasource="projectRoleDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.scrumit.web.projectrole">
    <dsContext>
        <datasource id="projectRoleDs"
                    class="com.company.scrumit.entity.ProjectRole"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="projectRoleDs">
            <column width="250px">
                <field property="team"/>
                <field property="project"/>
                <field property="type"/>
                <field property="performer"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
