<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.scrumit.web.meeting.MeetingEdit"
        datasource="meetingDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.scrumit.web.meeting">
    <dsContext>
        <datasource id="meetingDs"
                    class="com.company.scrumit.entity.Meeting"
                    view="meeting-view"/>
        <valueHierarchicalDatasource id="tasksForMeetingDs"
                                     datasourceClass="com.company.scrumit.web.meeting.TasksForMeetingDs"
                                     hierarchyProperty="parent">
            <properties idProperty="task">
                <property class="com.company.scrumit.entity.Task"
                          name="parent"/>
                <property class="com.company.scrumit.entity.Task"
                          name="task"/>
                <property datatype="boolean"
                          name="done"/>
                <property class="com.company.scrumit.entity.Performer"
                          name="performer"/>
                <property datatype="date"
                          name="begin"/>
                <property datatype="date"
                          name="deadline"/>
                <property datatype="string"
                          name="comment"/>
            </properties>
        </valueHierarchicalDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tasks"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="meetingDs">
            <column width="300px">
                <field property="sprint"/>
            </column>
            <column>
                <field property="date"/>
            </column>
            <column width="300px">
                <field property="type"/>
            </column>
        </fieldGroup>
        <hbox expand="comment"
              spacing="true"
              width="100%">
            <label value="mainMsg://Comment"/>
            <textArea id="comment"
                      datasource="meetingDs"
                      property="comment"/>
        </hbox>
        <treeTable id="tasks"
                   editable="true"
                   width="100%">
            <columns>
                <column id="parent"/>
                <column id="task"/>
                <column id="done"/>
                <column id="performer"/>
                <column id="begin"/>
                <column id="deadline"/>
                <column id="comment"/>
            </columns>
            <rows datasource="tasksForMeetingDs"/>
        </treeTable>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
