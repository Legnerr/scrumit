<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.scrumit.web.screens.SprintPlanning"
        messagesPack="com.company.scrumit.web.screens">
    <dsContext>
        <collectionDatasource id="teamsDs"
                              allowCommit="false"
                              class="com.company.scrumit.entity.Team"
                              view="team-view">
            <query>
                <![CDATA[select e from scrumit$Team e]]>
            </query>
        </collectionDatasource>
        <hierarchicalDatasource id="unassignedTasksDs"
                                class="com.company.scrumit.entity.Task"
                                hierarchyProperty="task"
                                refreshMode="NEVER"
                                view="task-tree"/>
        <hierarchicalDatasource id="assignedTasksDs"
                                class="com.company.scrumit.entity.Task"
                                hierarchyProperty="task"
                                refreshMode="NEVER"
                                view="task-tree"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tasksHbox">
        <hbox spacing="true">
            <label align="MIDDLE_LEFT"
                   value="msg://Team"/>
            <lookupPickerField id="team"
                               height="32px"
                               metaClass="scrumit$Team"
                               optionsDatasource="teamsDs"
                               width="300px"/>
            <label align="MIDDLE_LEFT"
                   value="msg://Date start"/>
            <dateField id="dateStart"
                       dateFormat="msg://dd.MM.yyyy"/>
            <button id="btnCreateSprint"
                    caption="msg://Create sprint"
                    invoke="onBtnCreateSprintClick"/>
        </hbox>
        <hbox id="tasksHbox"
              spacing="true"
              width="100%">
            <treeTable id="unassignedTasksTable"
                       caption="msg://Unassigned tasks"
                       height="100%"
                       width="100%">
                <columns>
                    <column id="shortdesc"/>
                    <column id="level"/>
                    <column id="description"/>
                    <column id="done"/>
                    <column id="realduration"/>
                    <column id="type"/>
                    <column id="deadline"/>
                    <column id="begin"/>
                    <column id="duration"/>
                    <column id="amount"/>
                    <column id="control"/>
                    <column id="priority"/>
                </columns>
                <rows datasource="unassignedTasksDs"/>
            </treeTable>
            <treeTable id="assignedTasksTable"
                       caption="msg://Assigned tasks"
                       height="100%"
                       width="100%">
                <columns>
                    <column id="shortdesc"/>
                    <column id="level"/>
                    <column id="description"/>
                    <column id="done"/>
                    <column id="realduration"/>
                    <column id="type"/>
                    <column id="deadline"/>
                    <column id="begin"/>
                    <column id="duration"/>
                    <column id="amount"/>
                    <column id="control"/>
                    <column id="priority"/>
                    <column id="testingPlan"/>
                </columns>
                <rows datasource="assignedTasksDs"/>
            </treeTable>
        </hbox>
    </layout>
</window>
