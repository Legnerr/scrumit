<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.scrumit.web.screens.Sprintplanning"
        messagesPack="com.company.scrumit.web.screens">
    <dsContext>
        <collectionDatasource id="teamsDs"
                              allowCommit="false"
                              class="com.company.scrumit.entity.Team"
                              view="team-view">
            <query>
                <![CDATA[select e from scrumit$Team e]]>
            </query>
        </collectionDatasource>
        <hierarchicalDatasource id="tasksDs"
                                class="com.company.scrumit.entity.Task"
                                hierarchyProperty="task"
                                view="task-tree">
            <query>
                <![CDATA[select e from scrumit$Task e where e.top in :ds$teamsDs.projects]]>
            </query>
        </hierarchicalDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="unassigned">
        <hbox spacing="true">
            <label value="msg://Team"/>
            <lookupPickerField id="team"
                               height="32px"
                               metaClass="scrumit$Team"
                               optionsDatasource="teamsDs"
                               width="300px"/>
            <button invoke="testQuery"/>
        </hbox>
        <treeTable id="unassigned"
                   width="100%">
            <columns>
                <column id="shortdesc"/>
                <column id="proirity"/>
                <column id="duration"/>
            </columns>
            <rows datasource="tasksDs"/>
        </treeTable>
    </layout>
</window>
