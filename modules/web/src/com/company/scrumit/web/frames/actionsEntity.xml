<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        messagesPack="com.company.scrumit.web.frames">
    <layout>
        <hbox spacing="true" stylename="cuba-edit-window-actions">
            <button id="windowCommit" action="windowCommit" icon="icons/ok.png" align="TOP_CENTER" width="100%"/>
            <button id="windowCommitAndClose" action="windowCommitAndClose" icon="icons/ok.png" align="TOP_CENTER" width="100%"/>
            <button id="btnGenerateTasksFromDesc"
                    invoke="checkBtnClick"
                    icon="PLUS"
                    caption="msg://btnGenerate"
                    align="TOP_CENTER"/>
            <button id="windowClose" action="windowClose" icon="icons/cancel.png" align="TOP_CENTER" width="100%"/>
        </hbox>
    </layout>
</window>