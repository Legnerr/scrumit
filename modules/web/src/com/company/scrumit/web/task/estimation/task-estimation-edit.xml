<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="Task estimation">

    <data>
        <collection id="taskEstimationDs" class="com.company.scrumit.entity.TaskEstimation" view="_local">
            <loader id="taskEstimationDl">
                <query>
                    select e from scrumit$TaskEstimation e
                </query>
            </loader>
        </collection>
    </data>
    <layout>
        <label id="taskId" value="TaskId" stylename="bold"/>
        <label id="userId" value="userId" stylename="bold"/>
        <textField id="value" width="100%" inputPrompt="Enter here your value"/>
        <hbox spacing="true">
            <button id="saveBtn" caption="Save"/>
            <button id="closeBtn" caption="Close"/>
        </hbox>
    </layout>
</window>